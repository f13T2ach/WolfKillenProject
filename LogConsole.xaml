<Window x:Class="WolfKillen.LogConsole"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WolfKillen"
        mc:Ignorable="d"
        Title="LogConsole" Height="658" Width="526" ResizeMode="NoResize">
    <Grid>
        <ScrollViewer Name="Scroller" Margin="0,0,0,26" Background="#FF000128">
            <TextBlock Name="OutputBlock"  Foreground="White" FontFamily="Consolas" Padding="10"/>
        </ScrollViewer>
        <!--非常的微软 非常的微软啊-->
        <Button Content="导出本日志" HorizontalAlignment="Center" Height="32" Margin="0,585,0,0" VerticalAlignment="Top" Width="526" Click="Button_Click"/>
    </Grid>
</Window>
